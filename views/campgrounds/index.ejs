
<%- include("../partials/header")%>


<div class="container"> 
    <header class="jumbotron">
    <h1>Welcom To YelpCemp!</h1>
    <p> View our hand-picked campgrounds from all over the world</p>
    <p> <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add new campground</a>
    </p>
    </header>
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-4 col-sm-6">
                 <div class="crircle">
                    <img src="<%=campground.image %>" class="img-circle" width="300" height="300"> 
                </div>
                 <h4><%=campground.name%> </h4>
                 <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More Info</a> 
                 </p>
                </div>
            
            <%}); %>    
            </div>
    </div>
</div>
<%- include("../partials/footer") %>